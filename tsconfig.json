{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "rootDir": "src",
      "sourceMap": true,
      "resolveJsonModule": true
    },
    "include": ["src"],
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    }
  }